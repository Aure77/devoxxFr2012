        <dozer.version>5.3.2</dozer.version>
        <servlet-api.version>2.5</servlet-api.version>
        <jstl.version>1.2</jstl.version>
    </properties>

    <developers>
        <developer>
            <email>thomas.viutti@soat.fr</email>
            <id>thomas</id>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <dependencyManagement>

