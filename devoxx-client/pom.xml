    <properties>
        
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <projectBaseUri>${project.baseUri}</projectBaseUri>
        <java.version>1.6</java.version>

		<devoxxfr.version>1.0.1-SNAPSHOT</devoxxfr.version>
		
